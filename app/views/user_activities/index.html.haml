%h1 Listing user_activities
%table
  %thead
    %tr
      %th Activity
      %th Minutes
      %th Comment
      %th{colspan: "3"}
  %tbody
    - @user_activities.each do |user_activity|
      %tr
        %td= user_activity.activity.name
        %td= user_activity.minutes
        %td= user_activity.comment
        %td= link_to 'Show', user_activity
        %td= link_to 'Edit', edit_user_activity_path(user_activity)
        %td= link_to 'Destroy', user_activity, method: :delete, data: { confirm: 'Are you sure?' }
%br/
= link_to 'New User activity', new_user_activity_path