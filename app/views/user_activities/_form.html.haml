= simple_form_for(@user_activity) do |f|
  - if @user_activity.errors.any?
    #error_explanation
      %h2
        = pluralize(@user_activity.errors.count, "error")
        prohibited this user_activity from being saved:
      %ul
        - @user_activity.errors.full_messages.each do |message|
          %li= message

  = f.association :activity, :collection => Activity.all.sort{|a,b| a.name <=> b.name}

  .field
    = f.label :minutes  
    = f.text_field :minutes
  
  .field
    = f.label :comment
    = f.text_field :comment
  
  .actions
    = f.submit